	closemessage
	fadescreen (FADE_TO_BLACK)
	removeobject(2)
	fadescreen(FADE_FROM_BLACK)
    setflag (FLAG_MITHRILMAN1)
    clearflag (FLAG_MITHRILMAN2)
    savebgm(MUS_DUMMY)
	fadedefaultbgm
    release
    end
}
